<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:layout_margin="30dp"
    android:orientation="vertical"
    tools:context="com.example.trieendah.retrofitpariwisata.Main5Activity">
    <TextView
        android:id="@+id/lis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DATA KATEGORI"
        android:layout_centerHorizontal="true"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginLeft="10dp"/>
    <TextView
        android:id="@+id/idkategori4"
        android:layout_below="@+id/lis"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ID Kategori : "
        android:textSize="20dp"
        android:layout_marginTop="40dp"/>
    <TextView
        android:id="@+id/jenis4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Jenis           :"
        android:layout_below="@id/idkategori4"
        android:textSize="20sp"/>

    <EditText
        android:id="@+id/edtidkategori2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/idkategori4"
        android:layout_toEndOf="@+id/idkategori4"
        android:layout_toRightOf="@+id/idkategori4"
        android:hint="id kategori" />
    <EditText
        android:id="@+id/edtjenis2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="jenis"
        android:layout_alignBaseline="@+id/jenis4"
        android:layout_alignBottom="@+id/jenis4"
        android:layout_toRightOf="@+id/idkategori4"
        android:layout_toEndOf="@+id/idkategori4" />
    <LinearLayout
        android:id="@+id/Linearlayout1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/jenis4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp">
            <Button
                android:id="@+id/btInsert4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="TAMBAH DATA BARU"/>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/Linearlayout2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@+id/Linearlayout1"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btUpdate4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Update"/>
        <Button
            android:id="@+id/btDelete4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"/>
        <Button
            android:id="@+id/btBack4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Back"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tvMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@+id/Linearlayout2"
        android:textSize="20sp"
        android:inputType="textMultiLine"/>
</RelativeLayout>
